FROM quay.io/centos/centos@sha256:7d0dcbf40012e732cb996a64ca997672028537172e527db893fcd59393d0a382
@SET_PROXY@

RUN dnf -y update && \
    dnf -y install dnf-plugins-core && \
    dnf config-manager --set-enabled crb && \
    dnf -y install \
    diffutils \
    file \
    g++ \
    git \
    protobuf-compiler \
    xz

@INSTALL_RUST@
