FROM quay.io/centos/centos@sha256:a27fc24deba77b3deb3686dc087adb8d9f398da2a89ff8874c0849e657b98e8b
@SET_PROXY@

RUN dnf -y update && \
    dnf -y install dnf-plugins-core && \
    dnf config-manager --set-enabled crb && \
    dnf -y install \
    diffutils \
    file \
    g++ \
    git \
    protobuf-compiler \
    xz

@INSTALL_RUST@
